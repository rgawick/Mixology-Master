<div id='main-container'>
    {{#drinks}}
    <div id="drink-title-main">
    <h1>{{strDrink}}</h1>
    </div>

        <div id="info-container">
            <div id="drinkInfo">

                <h3>Ingredients:</h3>
                <ul>
                    {{#drinkIngredients}}
                    <li>
                        <p>{{proportion}} {{ingredient}}</p>
                    </li>
                    {{/drinkIngredients}}
                </ul>

                <h3>Glass Type:</h3>
